<%-include('header')%>
<a class="add-message" href="/new">Add message</a>
<div class="message-board">
  <%messages.forEach((message) => {%>

  <div class="message">
    <div>
      <div class="info">
        <h2 class="<%=message.color%>"><%=message.user%></h2>
        <h2 class="date"><%=message.added.toLocaleDateString()%></h2>
      </div>
      <p><%=message.text%></p>
    </div>
    <div class="see-details">
      <a href="/message/<%=message.id%>">See details</a>
    </div>
  </div>

  <%})%>
</div>
